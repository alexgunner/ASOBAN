<% document_title = false if local_assigns[:document_title].nil? %>

<style>
  .modal-dialog {
    width: 100%;
  }
  .modal-content {
    box-shadow: none;
    border-radius: 3px;
  }
  .modal-header {
    background-color: rgba(0, 15, 56, 0.9);
    text-align: center;
    color: #b49a78;
    border-bottom: none;
    border-radius: 3px;
  }
  .modal-header h4 {
    color: #b49a78;
  }
  .modal-footer {
    background-color: #f9f9f9;
  }
  .modal-body {
    height: 80vh;
  }
  .inline-pdf-content {
    display: none;
  }
</style>

<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <div class="row">
        <div class="col-md-8">
          <% if document_title %>
            <h4> <%= document_title %> </h4>
          <% end %>
        </div>
        <div class="col-md-4">
          <button class="show-hide-pdf">Ver Documento</button>
        </div>
      </div>
    </div>
    <div class="inline-pdf-content">
      <div class="modal-body">
        <object data="<%= pdf_url %>" type="application/pdf" width="100%" height="100%">
          <iframe src="<%= pdf_url %>" width="100%" height="100%" style="border: none;">
            El navegador actual no soporta la visualizacion de PDFs. Para ver el documento puede descargarlo haciendo click en este boton: <a href="<%= pdf_url %>">Descargar PDF</a>
          </iframe>
        </object>
      </div>
      <div class="modal-footer">
        Para descargar el pdf haga <a href="<%= pdf_url %>" download class="btn btn-asoban">click aqu√≠.</a>
      </div>
    </div>
  </div>
</div>
