<%= bootstrap_form_for(card) do |f| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.check_box :twitter, label: "Twitter" %>
  </div>

  <div class="field">
    <%= f.check_box :certifications, label: "Firmas Digita" %>
  </div>

  <div class="field">
    <%= f.check_box :newsfeed, label: "Boletín de Noticias" %>
  </div>

  <div class="field">
    <%= f.text_field :title, label: "Título" %>
  </div>

  <div class="field">
    <%= f.text_area :content, label: "Contenido" %>
  </div>

  <div class="field">
    <%= f.text_field :url, label: "Enlace" %>
  </div>

  <div class="actions">
    <%= f.submit "Aceptar", class: "btn btn-asoban" %>
    <%= link_to "Volver", '/cards', class: "btn btn-asoban-inverse" %>
  </div>
<% end %>
