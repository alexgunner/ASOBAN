
<h1 class="text-center">Mensajes de contacto</h1>

<% if notice.present? %>
  <div class="alert alert-asoban">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <div id="notice"> <%= notice %> </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="box">
      <div class="box-header">
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellidos</th>
              <th>Correo electrónico</th>
              <th>Teléfono</th>
              <th>Mensaje</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @messages.each do |message| %>
              <tr>
                <td><%= message.name %></td>
                <td><%= message.lastname %></td>
                <td><%= message.email %></td>
                <td><%= message.phone %></td>
                <td><%= message.message %></td>
                <td><%= link_to 'Eliminar', message, method: :delete, data: { confirm: 'Está seguro que desea borrar este mensaje?' }, class: 'btn btn-asoban' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
