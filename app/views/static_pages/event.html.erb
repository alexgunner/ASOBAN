
<style>
  .fit-container {
  }
  .img-div {
    max-height: 270px;
    overflow-x: hidden;
    text-align: center;
  }
  .event-img {
    max-height: 270px;
  }
  .event-separator {
    border-color: rgb(172, 152, 92);
    border-width: 2px
  }
</style>

<section class="events standalone-section">
  <div class="container">
    <h1>Eventos</h1>
    <% @events.each do |event| %>
      <!-- EVENTO -->
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 img-div">
          <img class="event-img" src="<%= event.picture.url %>" alt="">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-8">
          <h3><%= event.title %></h3>
          <p>
            <%= strip_tags(event.description)[0..200] %>
          </p>
          <a href="<%= event_path(event) %>" class="btn btn-asoban">Leer m√°s&nbsp;&nbsp;<i class="fa fa-chevron-right"></i></a>
        </div>
      </div>
      <!-- EVENTO -->
      <hr class="event-separator">
    <% end %>
  </div>
</section>

<div class="vertical-space-50px"></div>
