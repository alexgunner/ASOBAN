
<section class="entities standalone-section">
	<div class="container">
		<% @events.each do |event| %>
			<div class="row">

				<div class="col-lg-6">
					<h3><%= event.title %></h3>
					<img src="<%= event.picture.url %>" class="img-responsive">
				</div>
				<div class="col-lg-6">
					<br><br><br><br>
					<p>
						<%= event.description %>
					</p>
					<strong>Fecha de inicio:</strong> <%= event.start_date %><br>
					<strong>Registro:</strong> <%= event.start_date %><br>
					<strong>Programa:</strong> <%= event.program %><br>
					<strong>Auspician:</strong> <%= event.sponsors %>
				</div>
			</div>
			<br>
		<% end %>
	</div>
</section>
