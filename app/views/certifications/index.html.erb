
<h1 class="text-center">Certificados</h1>

<% if notice.present? %>
  <div class="alert alert-asoban">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <div id="notice"> <%= notice %> </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="box">
      <div class="box-header">
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellidos</th>
              <th>CI</th>
              <th>Correo electrónico</th>
              <th>Departamento</th>
              <th>Ciudad</th>
              <th>Nombre de la institución</th>
              <th>NIT</th>
              <th>Teléfono</th>
              <th>Domicilio Legal</th>
              <th>Cargo</th>

              <th>Observaciones</th>

            </tr>
          </thead>

          <tbody>
            <% @certifications.each do |certification| %>
              <tr>
                <td><%= certification.name %></td>
                <td><%= certification.lastname %></td>
                <td><%= certification.ci %></td>
                <td><%= certification.email %></td>
                <td><%= certification.state %></td>
                <td><%= certification.city %></td>
                <td><%= certification.institution_name %></td>
                <td><%= certification.nit %></td>
                <td><%= certification.phone %></td>
                <td><%= certification.legal_address %></td>
                <td><%= certification.charge %></td>

                <td><%= certification.observations %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
