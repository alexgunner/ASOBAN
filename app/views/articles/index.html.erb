
<h1 class="text-center">Noticias</h1>

<% if notice.present? %>
  <div class="alert alert-asoban">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <div id="notice"> <%= notice %> </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="box">
      <div class="box-header">
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Título</th>
              <th>Contenido</th>
              <th>Categoría</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.title %></td>
                <td><%= article.content %></td>
                <td><%= article.category.name %></td>
                <td><%= link_to 'Editar', edit_article_path(article), class: 'btn btn-asoban' %></td>
                <td><%= link_to 'Borrar', article, method: :delete, data: { confirm: '¿Está seguro que desea eliminar este registro?' }, class: 'btn btn-asoban-inverse' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <%= link_to 'Nueva noticia', new_article_path, class: "btn btn-asoban" %>
      </div>
    </div>
    <!-- /.box -->
  </div>
</div>
