<h1 class="text-center">Enlaces</h1>

<% if notice.present? %>
  <div class="alert alert-asoban">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <div id="notice"> <%= notice %> </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="box">
      <div class="box-header">
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>TÃ­tulo</th>
              <th>Enlace</th>
              <th>Imagen</th>
              <th colspan="2">Opciones</th>
            </tr>
          </thead>

          <tbody>
            <% @links.each do |link| %>
              <tr>
                <td><%= link.title %></td>
                <td><%= link.link %></td>
                <td><img src="<%= link.image.url(:thumb) %>" alt=""></td>
                <td><%= link_to 'Editar', edit_link_path(link), class: 'btn btn-asoban' %></td>
                <td><%= link_to 'Eliminar', link, method: :delete, data: {
                  confirm: 'Borrando Enlace',
                  'confirm-button-text': 'Si',
                  'cancel-button-text': 'No',
                  'confirm-button-color': '#66CD00',
                  'sweet-alert-type': 'warning',
                  text: 'Estas seguro?'
                }, class: 'btn btn-asoban-inverse' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <%= link_to 'Nuevo Enlace', new_link_path, class: 'btn btn-asoban' %>
      </div>
    </div>
    <!-- /.box -->
  </div>
</div>
