<div class="login-box">
  <div class="login-logo">
    <%= link_to dashboard_path do %>
      Panel de control <b>ASOBAN</b>
    <% end %>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Iniciar sesión</p>

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, label: "Correo Electrónico", placeholder: "Ingresar el correo electrónico" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", label: "Contraseña", placeholder: "Ingresar la contraseña" %>
      </div>

      <div class="actions">
        <div class="text-center">
          <%= f.submit "Iniciar sesión", class: "btn btn-asoban" %>
          <%= link_to 'Volver', root_path, class: 'btn btn-asoban-inverse' %>
        </div>

      </div>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<style media="screen">
  .content-wrapper {
    margin-left: 0;
  }
</style>
